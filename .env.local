# Local Development Environment (No Docker)

# Database - Adjust for your local PostgreSQL
DATABASE_URL=postgresql://raguser:password@localhost:5432/ragdb
POSTGRES_PASSWORD=password

# Services URLs (all local)
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379/0
LLM_SERVICE_URL=http://localhost:11434

# File paths - Windows style
UPLOAD_DIRECTORY=C:/Users/THE/open-source-rag-system/storage/uploads
PROCESSED_DIRECTORY=C:/Users/THE/open-source-rag-system/storage/processed

# Security
SECRET_KEY=local_development_secret_key_change_this
JWT_SECRET_KEY=local_jwt_secret_key_change_this

# Model settings
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
LLM_MODEL_NAME=llama3.1:8b

# Development settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG