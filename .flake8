[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .archive,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    # Ignore unused imports in __init__ files
    __init__.py: F401
    # Ignore line length in migration files
    migrations/*.py: E501
    # Test files can have unused imports and longer lines
    tests/*.py: F401,E501
    # Allow longer lines in routers due to docstrings
    core/routers/*.py: E501